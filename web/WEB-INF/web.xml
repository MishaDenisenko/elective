<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>app.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allLessons</servlet-name>
        <servlet-class>app.servlets.LessonsList</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allLessons</servlet-name>
        <url-pattern>/all-lessons</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myLessons</servlet-name>
        <servlet-class>app.servlets.MyLessons</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myLessons</servlet-name>
        <url-pattern>/my-lessons</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lessonsTheme</servlet-name>
        <servlet-class>app.servlets.LessonsTheme</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>lessonsTheme</servlet-name>
        <url-pattern>/lessons-theme</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lessonsTeacher</servlet-name>
        <servlet-class>app.servlets.LessonTeacher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>lessonsTeacher</servlet-name>
        <url-pattern>/lessons-teacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>setMark</servlet-name>
        <servlet-class>app.servlets.SetMark</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setMark</servlet-name>
        <url-pattern>/set-mark</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addLesson</servlet-name>
        <servlet-class>app.servlets.AddLesson</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addLesson</servlet-name>
        <url-pattern>/add-lesson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addTeacher</servlet-name>
        <servlet-class>app.servlets.AddTeacher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addTeacher</servlet-name>
        <url-pattern>/add-teacher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userInfo</servlet-name>
        <servlet-class>app.servlets.UserInfo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userInfo</servlet-name>
        <url-pattern>/user-info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signUp</servlet-name>
        <servlet-class>app.servlets.SignUp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signUp</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
</web-app>